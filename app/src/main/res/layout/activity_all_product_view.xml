<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.allProduct.AllProductViewActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/productImageClick"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/productTitleCLick"
                android:layout_margin="10dp"
                android:textSize="16dp"
                android:layout_below="@id/productImageClick"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/productNameClick"
                android:layout_margin="10dp"
                android:textSize="16dp"
                android:layout_below="@id/productTitleCLick"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/productPriceClick"
                android:layout_margin="10dp"
                android:textSize="16dp"
                android:layout_below="@id/productNameClick"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/productOrderNumClick"

                android:layout_margin="10dp"
                android:textSize="16dp"
                android:layout_below="@id/productPriceClick"/>

            <Button
                android:id="@+id/productShopAddClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/productOrderNumClick"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"

                android:layout_marginBottom="5dp"
                android:background="@drawable/btn"
                android:paddingLeft="5dp"
                android:text="ADD"
                app:backgroundTint="#FFEB3B" />

            <Button
                android:id="@+id/productShopDeleteClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/productShopAddClick"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn"
                android:text="Drop"
                app:backgroundTint="#FF5722" />




        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>